<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
    {% block stylesheets %}{% endblock %}
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand right" href="{{ path('home.index') }}">PerfectNeeds</a>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('category.index') }}">Manage Categories</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('product.index') }}">Manage Products</a>
                    </li>
                {% endif %}
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('app_logout') }}">Logout</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('home.index') }}">Home</a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </nav>
    <br><br>
    <div class="container">
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
    <div class="container">
        <div class="input-group">
            <div class="input-group-text">
                <span class="input-group-text"> 
                    <span class="fa fa-search"></span>
                </span>
            </div>
            <input autofocus placeholder="Search by product's name or code..." class="form-control" type="text" name="search" id="search" autocomplete="off">
        </div>
        <ul class="list-group" id="list"></ul>
        <ul class="list-group" id="code_list"></ul>
    </div>
    {% endif %}

        {% block body %}{% endblock %}
    </div>
    {% block javascripts %}{% endblock %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="{{ asset('js/search_by_name.js') }}"></script>
    <script src="{{ asset('js/search_by_code.js') }}"></script>
    <script src="{{ asset('js/main.js') }}"></script>
</body>

</html>