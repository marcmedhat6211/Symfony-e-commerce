{% extends('base.html.twig') %}

{% block body %}

<div class="container"> 
  <div class="card-group">

      <!--bootstrap card with 3 horizontal images-->
      <div class="row"> 
          <!-- <div class="card col-md-4">  -->
            <div class="card-body"> 
              <h3 style="text-align: center;" class="card-title">{{ product.name }}</h3> 
              {% for image in  images %}
                <img style="height: 60%; width: 25%" src="{{ '/uploads/' ~ image }}" alt="">
              {% endfor %}
              <p style="text-align: center;" class="card-text">{{ product.description }}</p>
            </div>
          <!-- </div> -->
      </div> 
  </div> 
</div> 

{% endblock %}